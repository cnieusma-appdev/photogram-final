<!DOCTYPE html>
<html>
  <head>
    <title>PhotogramFinal</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
    <% if session.fetch(:user_id) == nil %>
       <ul>
        <li>
          <a href="/users"> All users </a>
        </li>
        <li>
          <a href="/photos"> All public photos </a>
        </li>
        <li>
          <a href="/user_sign_in"> Sign In </a>
        </li>
        <li>
          <a href="/user_sign_up"> Sign Up </a>
        </li>
      </ul>


    <% else %>
      <ul>
        <li>
          <a href="/users"> All users </a>
        </li>
        <li>
          <a href="/photos"> All public photos </a>
        </li>
        <li>
         <a href="/users/<%=User.where({:id => session.fetch(:user_id)}).at(0).username%>"> <%=User.where({:id => session.fetch(:user_id)}).at(0).username%> </a>
        </li>
        <li>
          <a href="/user_sign_out"> Sign Out </a>
        </li>
      </ul>
    <% end %>


    <% if notice.present?%>
    <div>
      <%= notice%>
    </div>
    <% end %>

     <% if alert.present?%>
    <div>
      <%= alert%>
    </div>
    <% end %>

    <%= yield %>

  </body>
</html>

</html>
